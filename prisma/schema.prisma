generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Items{
  itemId Int @id @default(autoincrement()) @map("itemId")
  itemName String @unique @map("itemName")
  itemStat String @map("itemStat")
  itemPrice BigInt @map("itemPrice")
  itemClass String @map("itemClass") 
  createdAt DateTime @default(now()) @map("createdAt")
  updatedAt DateTime @updatedAt @map("updatedAt")

  characterClass CharacterClasses @relation(fields: [itemClass], references: [characterClassesName], onDelete: Cascade)

  @@map("Items")
}

model Accounts{
  accountId BigInt @id @default(autoincrement()) @map("accountId")
  email String @unique @map("email")
  password String @map("password")
  userName String @map("userName")
  userAge Int @map("userAge")
  createdAt DateTime @default(now()) @map("createdAt")
  updatedAt DateTime @updatedAt @map("updatedAt")

  @@map("Accounts")
}

model Characters{
  characterId BigInt @id @default(autoincrement()) @map("characterId")
  characterName String @unique @map("characterName")
  characterClass String @map("characterClass")
  characterHp BigInt @map("characterHp")
  characterPower BigInt @map("characterPower")
  characterMoney BigInt @map("characterMoney")
  accountId BigInt @map("accountId")
  createdAt DateTime @default(now()) @map("createdAt")
  updatedAt DateTime @updatedAt @map("updatedAt")

  @@map("Characters")
}

model CharacterClasses{
  characterClassesId BigInt @id @default(autoincrement()) @map("characterId")
  characterClassesName String @unique @map("characterName")
  createdAt DateTime @default(now()) @map("createdAt")
  updatedAt DateTime @updatedAt @map("updatedAt")

  items Items[]

  @@map("CharacterClasses")
}
